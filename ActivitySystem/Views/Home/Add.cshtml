@model ActivitySystem.ViewModels.ActivityFormViewModel

@{
    ViewData["Title"] = "新增活動";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ActivityName" class="control-label"></label>
                <input asp-for="ActivityName" class="form-control" />
                <span asp-validation-for="ActivityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivityStartTime" class="control-label"></label>
                <input asp-for="ActivityStartTime" class="form-control" />
                <span asp-validation-for="ActivityStartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivityEndTime" class="control-label"></label>
                <input asp-for="ActivityEndTime" class="form-control" />
                <span asp-validation-for="ActivityEndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivitySignUpStartTime" class="control-label"></label>
                <input asp-for="ActivitySignUpStartTime" class="form-control" />
                <span asp-validation-for="ActivitySignUpStartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivitySignUpEndTime" class="control-label"></label>
                <input asp-for="ActivitySignUpEndTime" class="form-control" />
                <span asp-validation-for="ActivitySignUpEndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnrollCount" class="control-label"></label>
                <input asp-for="EnrollCount" class="form-control" />
                <span asp-validation-for="EnrollCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" asp-for="ActivityImage">
                    <label class="custom-file-label" for="ActivityImage">選擇圖片</label>
                    <span asp-validation-for="ActivityImage" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="新增" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">回首頁</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

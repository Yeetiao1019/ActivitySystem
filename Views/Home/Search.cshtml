@model ActivityListViewModel
@{
    ViewData["Title"] = "找活動";
}

<div class="container">
    <div class="row">
        @foreach (var activity in Model.Activities)
        {
            <div class="col-lg-4">
                <div class="card" style="width: 18rem;">
                    @if (activity.ActivityImage != null)
                    {
                        <img src="~/images/Upload/Activity/@activity.ActivityImage.ImageFileName" asp-append-version="true" />
                    }
                    else
                    {
                        <img src="https://photos.prnasia.com/prnk/20191217/2673717-1LOGO" class="card-img-top" alt="...">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@activity.ActivityName</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@activity.ActivityStartTime.ToString("yyyy-MM-dd(dddd)") ~ <br>@activity.ActivityEndTime.ToString("yyyy-MM-dd(dddd)")</h6>
                        <p class="card-text">@activity.Description</p>
                        <a asp-controller="Home" asp-action="Detail" asp-route-activityId="@activity.ActivityId" class="btn btn-primary">查看更多</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>